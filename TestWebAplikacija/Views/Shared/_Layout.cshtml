<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testovi</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/jtable-css")
</head>
<body class="p-0 m-0">
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler bg-dark" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav mr-auto">
                    @if (!User.Identity.IsAuthenticated)//linkovi za gosta
                    {
                        <li class="nav-item">@Html.ActionLink("Pocetna", "Index", "Pocetna", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Prijava", "UlogujSe", "Nalog", new { }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole("Korisnik"))//linkovi za korisnika
                    {
                        <li class="nav-item">@Html.ActionLink("Pocetna", "Index", "Pocetna", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Odjava", "IzlogujSe", "Nalog", new { }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole("Administrator"))//linkovi za korisnika
                    {
                        <li class="nav-item">@Html.ActionLink("Pocetna", "Index", "Pocetna", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Korisnik", "Index", "Korisnik", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Odjava", "IzlogujSe", "Nalog", new { }, new { @class = "nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content mt-3">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jtable-scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
